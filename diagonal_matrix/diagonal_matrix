//		            {5, 6, 7, 8, 9},
//		            {11, 22, 33, 44, 55},
//		            {16, 17, 18, 19, 20}
//		        };
//
//		        int rows = mat.length;
//		        int cols = mat[0].length;
//
//		        // Upper diagonals (including main diagonal)
//		        for (int i = 0; i < rows; i++) {
//		            for (int j = 0, k = i; j <= i && k >= 0 && j < cols; j++, k--) {
//		                System.out.print(mat[k][j] + " ");
//		            }
//		            System.out.println();
//		        }
//
//		        // Lower diagonals (excluding main diagonal)
//		        for (int i = 1; i < cols; i++) {
//		            for (int j = i, k = rows - 1; j < cols && k >= 0; j++, k--) {
//		                System.out.print(mat[k][j] + " ");
//		            }
//		            System.out.println();
//		        }

	}

}

